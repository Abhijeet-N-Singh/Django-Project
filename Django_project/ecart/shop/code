$('.cart').click(function(){

    console.log('clicked');
    var idstr= this.id.toString();
    console.log(idstr);
    if(cart[idstr]!= undefined) {
    cart[idstr] = cart[idstr]+1;
    }
    else{
    cart[idstr] = 1;
    }
    console.log(cart);
    });
===========================================================================
$('.cart').click(function(){

    console.log('clicked');
    var idstr= this.id.toString();
    console.log(idstr);
    if(cart[idstr]!= undefined) {
    cart[idstr] = cart[idstr]+1;
    }
    else{
    cart[idstr] = 1;
    }
    console.log(cart);
    localStorage.setItem('cart', JSON.stringify(cart));
    });
