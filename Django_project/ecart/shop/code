def productView(request, myid):
    product=Product.objects.filter(id=myid)
    print(product)
    return render(request, "shop/prodView.html")
===========================================
def productView(request, myid):
    product=Product.objects.filter(id=myid)
    print(product)
    return render(request, "shop/prodView.html", {'product':product[0]})
